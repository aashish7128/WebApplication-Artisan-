@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<!-- Header Section -->
<header class="text-center bg-dark text-white py-5">
    <h1 class="display-4">Artisan Hub</h1>
    <p class="lead">Connecting Artists with Art Lovers</p>

    <!-- Login/Register Section -->
    <div class="my-4">
        @if (User.Identity.IsAuthenticated)
        {
            <p>Welcome, @User.Identity.Name!
                
                <a asp-area = "Identity"asp-action="Logout" asp-controller="Account">Logout</a>
                
                    </p>
            
        }
        else
        {
            <p>
                New here? <a asp-area="Identity" asp-action="Register" asp-controller="Account">Register</a> or <a asp-area ="Identity" asp-action="Login" asp-controller="Account">Login</a>
              

            </p>
            
        }
    </div>
</header>

<!-- About Section -->
<section class="container my-5">
    <h2>About Artisan Hub</h2>
    <p>
        Artisan Hub is a platform designed to help artists showcase their work and connect with art enthusiasts. Whether you're an artist looking to share your creations or someone with an eye for art, Artisan Hub is the place for you.
    </p>
</section>



<form id="form1" runat="server">
    <div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>


            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img class="first-slide" src="~/Images/Artisan Products/Visual Arts/Visual Arts4.jpg" alt="First slide" width="auto" height="200px">
                </div>
                <div class="item">
                    <img class="second-slide" src="~/Images//Artisan Products/Home Decor/Home Decor4.jpg" alt="Second slide" width="auto" height="200px">
                </div>
                <div class="item">
                    <img class="third-slide" src="~/Images//Artisan Products//Crafts/Crafts3.jpg" alt="Third slide" width="auto" height="200px">
                </div>


            </div>


            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div><!-- /.carousel -->
    </div>
</form>
<!-- Additional Text Section -->
<section class="container my-5">
    <h2>Discover Unique Art Pieces</h2>
    <p>
        Explore a diverse collection of art from talented artists around the world. Find that perfect piece that speaks to you and adds a touch of creativity to your space.
    </p>
</section>

<!-- Footer Section -->
<footer class="bg-dark text-white text-center py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p>Contact Us: artisanhub@example.com</p>
            </div>
            <div class="col-md-6">
                <ul class="list-inline">
                    <li class="list-inline-item"><a asp-action="Index" asp-controller="Product">Products</a></li>
                    <li class="list-inline-item"><a asp-action="Index" asp-controller="Category">Categories</a></li>
                    <li class="list-inline-item"><a asp-action="ViewCart" asp-controller="Product">Cart</a></li>
                    <!-- Add more links as needed -->
                </ul>
            </div>
        </div>
    </div>
</footer>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>
}
